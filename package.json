{
	"name": "cpp-modules-analyser-vscode",
	"description": "An example demonstrating how to implement a language server as a WebAssembly module.",
	"author": "Tokamak Developments GK",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "tokamak",
	"categories": [],
	"keywords": [
		"WASM",
		"LSP",
		"C++",
		"Modules",
		"Language Server"
	],
	"engines": {
		"vscode": "^1.88.0"
	},
	"main": "./client/out/extension",
	"browser": "./client/dist/web/extension",
	"activationEvents": [
		"workspaceContains:**/*.{cpp,hpp,cppm,mpp,ipp,cxx,hxx,cxxm,mxx,ixx,cc,h}"
	],
	"extensionDependencies": [
		"ms-vscode.wasm-wasi-core"
	],
	"contributes": {
		"commands": [
			{
				"command": "tokamak.cpp-modules-analyser-vscode.viewMode.modulesInfo",
				"category": "View Mode",
				"title": "Modules"
			},
			{
				"command": "tokamak.cpp-modules-analyser-vscode.viewMode.importers",
				"category": "View Mode",
				"title": "Importers"
			},
			{
				"command": "tokamak.cpp-modules-analyser-vscode.viewMode.select",
				"category": "View Mode",
				"title": "Select View Mode",
				"icon": "$(default-view-icon)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "cppModules",
					"name": "Modules"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "tokamak.cpp-modules-analyser-vscode.viewMode.modulesInfo",
					"when": "view == cppModules",
					"group": "viewMode"
				},
				{
					"command": "tokamak.cpp-modules-analyser-vscode.viewMode.importers",
					"when": "view == cppModules",
					"group": "viewMode"
				},
				{
					"command": "tokamak.cpp-modules-analyser-vscode.viewMode.select",
					"when": "view == cppModules",
					"group": "navigation"
				}
			]
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"cross-env": "^7.0.3",
		"cross-env-shell": "^7.0.3",
		"dotenv-cli": "^8.0.0",
		"esbuild": "^0.25.0",
		"eslint": "^9.13.0",
		"fs-extra": "^11.3.0",
		"npm-run-all": "^4.1.5",
		"serve": "^14.2.3",
		"shx": "^0.4.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"scripts": {
		"postinstall": "cd client && npm install && cd ..",
		"vscode:prepublish": "npm run build",
		"build": "cd client && npm run compile && cd ../server && npm run build && cd ..",
		"copy-dl-resources": "shx rm -f resources/* && shx mkdir -p resources && shx cp linked_resources/* resources/",
		"build-and-copy-resources": "npm run build && npm run copy-dl-resources",
		"lint": "cd client && npm run lint && cd ..",
		"esbuild": "node ./bin/esbuild.js",
		"serve": "serve --cors -l 5000 --ssl-cert $HOME/certs/localhost.pem --ssl-key $HOME/certs/localhost-key.pem"
	},
	"dependencies": {
		"@vscode/wasm-component-model": "1.0.0"
	}
}